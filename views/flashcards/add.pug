extends ../layout

block content
  .pb-2.mt-2.mb-4.border-bottom
    h3 Create New Flashcard

  form(method='POST')
    input(type='hidden', name='_csrf', value=_csrf)
    input(type='hidden', name='_id', value=question._id)
    .form-group.row
      label(class='col-md-2 col-form-label font-weight-bold', for='category') Category
      .col-md-8
        select.form-control(name='category', id='category', autofocus=true)
          each val in ['algorithms', 'sorting', 'data structures', 'trees', 'graphs', 'dynamic programming', 'networking', 'hardware', 'coding', 'system design', 'design patterns', 'processes and threads']
            option(value=val, selected=question.category === val)
              =val
    .form-group.row
      label(class='col-md-2 col-form-label font-weight-bold', for='complexity') Complexity
      .col-md-8
        select.form-control(name='complexity', id='complexity')
          option(value=easy, selected=true) easy
          option(value=medium) medium
          option(value=hard) hard
    .form-group.row
      label(class='col-md-2 col-form-label font-weight-bold', for='title') Question
      .col-md-8
        textarea.form-control(name='title', id='title', rows='4')
          =question.title
    .form-group.row
      label(class='col-md-2 col-form-label font-weight-bold', for='answer') Answer
      .col-md-8
        textarea.form-control(name='answer', id='answer', rows='8')
          =question.answer
    .form-group
      .offset-md-2.col-md-8.p-1.controls
        button.btn.btn-primary(type='submit')
          i.far.fa-save.fa-sm
          | Save
        button.btn.btn-secondary(type='button')
          i.far.fa-undo.fa-sm
          | Back
